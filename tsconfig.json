{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "@credix/components": ["libs/components/src/index.ts"],
      "@credix/material": ["libs/material/src/index.ts"],
      "@credix/back-end": ["libs/back-end/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
